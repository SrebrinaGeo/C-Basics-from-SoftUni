#include <iostream>
#include <cmath>
using namespace std;

int main() 
{
    double deposit_Sum;
    cin >> deposit_Sum;

    int months;
    cin >> months;

    double annual_percentage;
    cin >> annual_percentage;

    double monthly_percentage = annual_percentage / 100.0;
    double total_Sum = deposit_Sum + deposit_Sum * monthly_percentage * months / 12.0;

    cout << total_Sum << endl;
    return 0;
}