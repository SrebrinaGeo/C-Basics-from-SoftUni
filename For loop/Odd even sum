#include <iostream>
#include <climits>
using namespace std;

int main()
{   
    int n; cin >> n;
    int oddSum = 0;
    int evenSum = 0;

    for (int i = 0; i < n; i++)
    {
        int number; cin >> number;   
        if (i % 2 == 0)
        {
          evenSum += number;
        }

        else
        {
          oddSum += number;
        }
    }

    int diff = abs(oddSum - evenSum);

    if (diff == 0)
    {
        cout << "Yes" << endl;
        cout << "Sum = " << oddSum << endl;
    }

    else
    {
        cout << "No" << endl;
        cout << "Diff = " << diff << endl;
    }
    
    return 0;
}